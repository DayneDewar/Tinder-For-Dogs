<ul id="slides"> 
  <% @dogs.each_with_index do |dog, index| %>
    <li class="slide <%= 'showing' if index == 0 %>" data-id="<%= dog.id %>">
      <div class="image-carousel" style="background-image: url('<%= url_for dog.images.first %>')">
      </div>
      <div class="dog-details">
        <span class="dog-name"><%= dog.dog_name %></span>, 2 yo<br />
        <i class="fa fa-map-marker"></i> Location
      </div>
    </li>
  <% end %>
</ul>

<div id="slide-controls">
  <span id="decline"><i class="fas fa-times fa-2x"></i></span>
  <span id="approve"><i class="fas fa-paw fa-2x"></i></span>
</div>